class Solution {
public:

    bool scoreBalance(string s) {

        int n = s.size();
        int totalScore = 0;

        for (char c : s) {
            totalScore += (c - 'a' + 1);
        }

        int leftScore = 0;

        for (int i = 0; i < n - 1; i++) {
            leftScore += (s[i] - 'a' + 1);
            int rightScore = totalScore - leftScore;

            if (leftScore == rightScore)
                return true;
        }

        return false;
        
    }
};
