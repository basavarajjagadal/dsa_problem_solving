class Solution {
public:
    vector<int> queryResults(int limit, vector<vector<int>>& queries) {

        unordered_map<int,int> ballcolor;
        unordered_map<int,int> colorvalue;
        vector<int> ans;

        for(int i=0;i<queries.size();i++){
            int ball=queries[i][0];
            int color=queries[i][1];

            if(ballcolor.find(ball)!=ballcolor.end()){
                int prevcolor=ballcolor[ball];
                colorvalue[prevcolor]--;
                if(colorvalue[prevcolor]==0){
                    colorvalue.erase(prevcolor);
                }

            }
            ballcolor[ball]=color;
            colorvalue[color]++;
            ans.push_back(colorvalue.size());
        }
        return ans;


        
    }
};
