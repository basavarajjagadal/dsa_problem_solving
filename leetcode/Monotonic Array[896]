class Solution {
public:

    bool isMonotonicincreasing(vector<int>& nums){

        for(int i=1;i<nums.size();i++){
            if(nums[i-1]>nums[i]){
                return false;
            }
        }
        return true;
    }

    bool isMonotonicdecreasing(vector<int>& nums){

        for(int i=1;i<nums.size();i++){
            if(nums[i-1]<nums[i]){
                return false;
            }
        }
        return true;
    }
    
    bool isMonotonic(vector<int>& nums) {

        bool ismoneincr=isMonotonicincreasing(nums);
        bool ismonodecr=isMonotonicdecreasing(nums);
        if(ismoneincr || ismonodecr) return true;
        return false;

    }
};
