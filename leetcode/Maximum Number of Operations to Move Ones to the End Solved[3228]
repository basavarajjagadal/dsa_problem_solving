class Solution {
public:
    int maxOperations(string s) {
        
        int n=s.size();
        int operations=0;
        int countones=0;
        int i=0;
        while(i<n){
            if(s[i]=='0'){
                operations=operations+countones;
                while(i<n && s[i]=='0') i++;
            }
            else{
                countones++;
                i++;
            }
        }
        return operations;
        
    }
};
