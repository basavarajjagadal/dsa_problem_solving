/**
 * Definition for a binary tree node.
 * public class TreeNode {
 *     int val;
 *     TreeNode left;
 *     TreeNode right;
 *     TreeNode() {}
 *     TreeNode(int val) { this.val = val; }
 *     TreeNode(int val, TreeNode left, TreeNode right) {
 *         this.val = val;
 *         this.left = left;
 *         this.right = right;
 *     }
 * }
 */
class Solution {
    public int findsum(TreeNode curr,boolean isleft){
        
        if(curr==null) return 0;
        if(curr.left==null && curr.right==null && isleft==true){
            return curr.val;
        }
        return findsum(curr.left,true)+findsum(curr.right,false); 

    }

    public int sumOfLeftLeaves(TreeNode root) {
        
        int ans=findsum(root,false);
        return ans;
        
    }
}
