class Solution {
public:
    bool ispresent(string s,char x){

        int n=s.size();
        for(int i=0;i<n;i++){
            if(s[i]==x) return true;
        }
        return false;

    }

    vector<int> findWordsContaining(vector<string>& words, char x) {

        vector<int> ans;
        int n=words.size();
        for(int i=0;i<n;i++){

            if(ispresent(words[i],x)){
                ans.push_back(i);
            }
        }
        return ans;
        
    }
};
