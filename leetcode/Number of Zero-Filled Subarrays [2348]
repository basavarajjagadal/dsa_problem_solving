class Solution {
public:
    long long zeroFilledSubarray(vector<int>& nums) {

        int l=0;
        int r=0;
        int n=nums.size();
        long long count=0;
        long long countZeros=0;
        while(r<n){
            if(nums[r]==0) countZeros++;
            if(nums[r]!=0 || r==n-1){
                count=count+countZeros*(countZeros+1)/2;
                countZeros=0;
                l=r+1;

            }
            r++;
        }
        return count;
        
    }
};
