class Solution {
public:
    long long countBadPairs(vector<int>& nums) {

        int n=nums.size();
        for(int i=0;i<n;i++){
            nums[i]=nums[i]-i;
        }
        long long badpairs=0;
        unordered_map<int,int> mp;
        for(int j=0;j<n;j++){
            int elementsonleft=j;
            int goodpairs=mp[nums[j]];
            mp[nums[j]]++;

            badpairs=badpairs+(elementsonleft-goodpairs);

        }
        return badpairs;
    }
};
