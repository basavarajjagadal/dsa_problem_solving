class Solution {
public:
    bool isAnagram(string s, string t) {
        // using hashing
        if(s.size()!=t.size()) return false;
        vector<int> hash(26,0);
        for(int i=0;i<s.size();i++){
            hash[s[i]-'a']++;
            hash[t[i]-'a']--;
        }
        for(int i=0;i<26;i++){
            if(hash[i]!=0) return false;
        }
        return true;
        // using sorting (Nlogn)
        // sort(s.begin(),s.end());
        // sort(t.begin(),t.end());
        // for(int i=0;i<s.size();i++){
        //     if(s[i]!=t[i]) return false;
        // }
        // return true;
    }
};
